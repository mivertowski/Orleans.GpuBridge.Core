<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Orleans.GpuBridge.Backends.DotCompute</PackageId>
    <Title>Orleans GPU Bridge DotCompute Backend</Title>
    <Description>DotCompute backend provider for Orleans GPU Bridge - enables GPU acceleration via DotCompute framework</Description>
    <PackageTags>orleans;gpu;compute;dotcompute;hpc;distributed</PackageTags>
    <Version>0.1.0</Version>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <!-- Microsoft Libraries (aligned with other projects to avoid downgrades) -->
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.8" />
    
    <!-- Compiler and Linker packages to avoid downgrades -->
    <PackageReference Include="Microsoft.DotNet.ILCompiler" Version="9.0.8" />
    <PackageReference Include="Microsoft.NET.ILLink.Tasks" Version="9.0.8" />
    
    <!-- Memory and Performance -->
    <PackageReference Include="System.Memory" Version="4.6.3" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Project References -->
    <ProjectReference Include="../Orleans.GpuBridge.Abstractions/Orleans.GpuBridge.Abstractions.csproj" />
    <ProjectReference Include="../Orleans.GpuBridge.Runtime/Orleans.GpuBridge.Runtime.csproj" />
  </ItemGroup>

</Project>