<Project>
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <EnableAOT>true</EnableAOT>
    <PublishAot>true</PublishAot>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    
    <!-- Assembly Info -->
    <Authors>Orleans.GpuBridge Contributors</Authors>
    <Company>Orleans Community</Company>
    <Product>Orleans.GpuBridge</Product>
    <Copyright>Copyright Â© 2024 Orleans.GpuBridge Contributors</Copyright>
    <Version>1.0.0</Version>
    
    <!-- Package Info -->
    <PackageProjectUrl>https://github.com/orleans/gpu-bridge</PackageProjectUrl>
    <RepositoryUrl>https://github.com/orleans/gpu-bridge</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Orleans;GPU;CUDA;OpenCL;DirectCompute;HPC;Distributed</PackageTags>
  </PropertyGroup>
</Project>