{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Orleans": "Warning",
      "Orleans.GpuBridge": "Debug",
      "Orleans.GpuBridge.Resilience": "Information"
    }
  },
  "GpuResilience": {
    "RetryOptions": {
      "MaxAttempts": 3,
      "BaseDelay": "00:00:00.500",
      "MaxDelay": "00:00:30",
      "UseExponentialBackoff": true,
      "UseJitter": true,
      "JitterFactor": 0.1
    },
    "CircuitBreakerOptions": {
      "FailureRatio": 0.5,
      "SamplingDuration": "00:02:00",
      "MinimumThroughput": 10,
      "BreakDuration": "00:01:00",
      "Enabled": true
    },
    "TimeoutOptions": {
      "KernelExecution": "00:05:00",
      "DeviceOperation": "00:00:30",
      "MemoryAllocation": "00:00:10",
      "KernelCompilation": "00:10:00",
      "DataTransfer": "00:02:00",
      "DefaultOperation": "00:01:00"
    },
    "BulkheadOptions": {
      "MaxConcurrentOperations": 10,
      "MaxQueuedOperations": 50,
      "Enabled": true,
      "AcquisitionTimeout": "00:00:30"
    },
    "RateLimitingOptions": {
      "MaxRequests": 100,
      "TimeWindow": "00:01:00",
      "Enabled": true,
      "Algorithm": "TokenBucket",
      "TokenRefillRate": 10.0,
      "MaxBurstSize": 20
    },
    "ChaosOptions": {
      "Enabled": false,
      "FaultInjectionProbability": 0.01,
      "LatencyInjection": {
        "Enabled": false,
        "MinLatency": "00:00:00.100",
        "MaxLatency": "00:00:05",
        "InjectionProbability": 0.05
      },
      "ExceptionInjection": {
        "Enabled": false,
        "InjectionProbability": 0.02,
        "ExceptionTypes": [
          "Orleans.GpuBridge.Abstractions.Exceptions.GpuOperationException",
          "Orleans.GpuBridge.Abstractions.Exceptions.GpuMemoryException",
          "System.TimeoutException"
        ]
      },
      "ResourceExhaustion": {
        "Enabled": false,
        "MemoryExhaustionProbability": 0.01,
        "ComputeExhaustionProbability": 0.01,
        "ExhaustionDuration": "00:00:30"
      }
    }
  },
  "FallbackChain": {
    "AutoDegradationEnabled": true,
    "AutoRecoveryEnabled": true,
    "DegradationErrorThreshold": 0.5,
    "RecoveryErrorThreshold": 0.1,
    "MinimumRequestsForDegradation": 10,
    "MinimumRequestsForRecovery": 5,
    "MinimumRecoveryInterval": "00:05:00",
    "ErrorRateWindow": "00:10:00"
  },
  "GpuBridge": {
    "PreferGpu": true,
    "EnableMetrics": true,
    "MaxDeviceMemoryUsage": 0.8,
    "DefaultTimeout": "00:01:00"
  }
}